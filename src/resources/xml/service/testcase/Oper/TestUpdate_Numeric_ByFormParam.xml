<?xml version="1.0" encoding="UTF-8"?>
<tc:testcase xmlns:tc="http://restsql.org/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://restsql.org/schema ../ServiceTestCaseDefinition.xsd ">
	<setup>
		<sql>INSERT INTO film (film_id,title,release_year,language_id,rental_duration,rental_rate,replacement_cost) VALUES (5000,'ESCAPE FROM TOMORROW',2000,1,0,0,0)</sql>
		<sql>INSERT INTO film (film_id,title,release_year,language_id,rental_duration,rental_rate,replacement_cost) VALUES (5001,'BLOOD PURPLE',2012,1,0,0,0)</sql>
		<sql>INSERT INTO film (film_id,title,release_year,language_id,rental_duration,rental_rate,replacement_cost) VALUES (5002,'THE DARKENING',2012,1,0,0,0)</sql>
		<sql>INSERT INTO film_rating (film_rating_id,film_id,stars) VALUES (1,5000,5)</sql>
		<sql>INSERT INTO film_rating (film_rating_id,film_id,stars) VALUES (2,5001,2)</sql>
		<sql>INSERT INTO film_rating (film_rating_id,film_id,stars) VALUES (3,5002,1)</sql>
	</setup>

	<step name="updateLessThanEqualTo">
		<!-- find records with year <= 2000 -->
		<request method="PUT" uri="res/FlatOneToOne?year=%3C%3D2000" contentType="application/x-www-form-urlencoded">
			<body>
<![CDATA[
title=ESCAPE%20FROM%20TOMORROW2
]]>
			</body>
		</request>
		<response>
			<body>
<![CDATA[
<writeResponse rowsAffected="1" />
]]>
			</body>
		</response>
	</step>
	<step name="verify1">
		<request method="GET" uri="res/FlatOneToOne/5000" />
		<response>
			<body>
<![CDATA[
<readResponse>
	<film film_id="5000" title="ESCAPE FROM TOMORROW2" year="2000" language_id="1" rental_duration="0" rental_rate="0.00" replacement_cost="0.00" film_rating_id="1" stars="5" />
</readResponse>
]]>
			</body>
		</response>
	</step>

	<step name="updateGreaterThan">
		<!-- find records with year > 2011 -->
		<request method="PUT" uri="res/FlatOneToOne?year=%3E2011" contentType="application/x-www-form-urlencoded">
			<body>
<![CDATA[
year=2015
]]>
			</body>
		</request>
		<response>
			<body>
<![CDATA[
<writeResponse rowsAffected="2" />
]]>
			</body>
		</response>
	</step>
	<step name="verify2">
		<request method="GET" uri="res/FlatOneToOne?year=2015" />
		<response>
			<body>
<![CDATA[
<readResponse>
	<film film_id="5001" title="BLOOD PURPLE" year="2015" language_id="1" rental_duration="0" rental_rate="0.00" replacement_cost="0.00" film_rating_id="2" stars="2" />
	<film film_id="5002" title="THE DARKENING" year="2015" language_id="1" rental_duration="0" rental_rate="0.00" replacement_cost="0.00" film_rating_id="3" stars="1" />
</readResponse>
]]>
			</body>
		</response>
	</step>

	<step name="updateEscapedNotEquals">
		<request method="PUT" uri="res/FlatOneToOne/5000" contentType="application/x-www-form-urlencoded">
			<body>
<![CDATA[
title=\!ESCAPE%20FROM%20TOMORROW3
]]>
			</body>
		</request>
		<response>
			<body>
<![CDATA[
<writeResponse rowsAffected="1" />
]]>
			</body>
		</response>
	</step>
	<step name="verify2">
		<request method="GET" uri="res/FlatOneToOne?title=%5C!ESCAPE%20FROM%20TOMORROW3" />
		<response>
			<body>
<![CDATA[
<readResponse>
	<film film_id="5000" title="!ESCAPE FROM TOMORROW3" year="2000" language_id="1" rental_duration="0" rental_rate="0.00" replacement_cost="0.00" film_rating_id="1" stars="5" />
</readResponse>
]]>
			</body>
		</response>
	</step>

	<teardown>
		<sql>DELETE FROM film_rating</sql>
		<sql>DELETE FROM film WHERE film_id between 5000 and 5500</sql>
	</teardown>
</tc:testcase>
